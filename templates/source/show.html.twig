    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ source.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ source.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ source.url }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ source.description }}</td>
            </tr>
            <tr>
                <th>Added_date</th>
                <td>{{ source.addedDate }}</td>
            </tr>
            <tr>
                <th>Added_time</th>
                <td>{{ source.addedTime }}</td>
            </tr>
        </tbody>
    </table>

