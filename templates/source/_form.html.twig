{{ form_start(form) }}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            {% if source.AddedDate %}
                <h5 class="card-title">Ajouté le {{ source.AddedDate }} à {{ source.AddedTime }}</h5>
            {% endif %}
            <p class="card-description"></p>
            <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            </div>
            <div class="form-group">
            {{ form_label(form.url) }}
            {{ form_widget(form.url) }}
            </div>
            {% if source.token is defined %}
                <div class="form-group">
                {{ form_label(form.token) }}
                {{ form_widget(form.token) }}
                </div>
            {% endif %}
            
            <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            </div>
            <div class="row">
                <div class="col form-group">
                {{ form_label(form.category) }}
                {{ form_widget(form.category) }}
                </div>
                <div class="col form-group">
                {{ form_label(form.Product) }}
                {{ form_widget(form.Product) }}
                </div>
            </div>
            
            
        </div>
    </div>
</div>  
<div class="card">
    <div class="card-body">
        <a class="btn btn-outline-primary" href="{{ path('app_source_index') }}">< Retour à la liste</a>
        <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
    </div>
</div>
{{ form_end(form, {'render_rest':false}) }}
