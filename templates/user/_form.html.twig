{{ form_start(form) }}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col form-group">
                {{ form_label(form.first_name) }}
                {{ form_widget(form.first_name) }}
                </div>
                <div class="col form-group">
                {{ form_label(form.last_name) }}
                {{ form_widget(form.last_name) }}
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                </div>
                <div class="col form-group">
                {{ form_label(form.phone) }}
                {{ form_widget(form.phone) }}
                </div>
            </div>
            {% if(form.password is defined) %}
            <div class="row">
                <div class="col form-group">
                {{ form_label(form.password.first) }}
                {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.password.first) }}
                </div>
                <div class="col form-group">
                {{ form_label(form.password.second) }}
                {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.password.second) }}
                </div>
            </div>
            {% endif %}
            <div class="card m-()">
                <div class="row">
                    <div class="col">
                        {{ form_label(form.team) }}
                        {{ form_widget(form.team) }}
                    </div>
                    <div class="col">
                        {{ form_label(form.roles) }}
                        {{ form_widget(form.roles) }}
                    </div>
                    <div class="col">
                        <div class="form-group">
                            {{ form_label(form.categories) }}
                            <div class="form-check">
                                {% for category in form.categories %}
                                    <div class="form-check">
                                        {{ form_widget(category, {'attr': {'class': 'form-check-input', 'id': 'category_' ~ loop.index}}) }}
                                        {{ form_label(category, null, {'label_attr': {'class': 'form-check-label'}, 'label': category.vars.label}) }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>  
<div class="card">
    <div class="card-body">
        <a class="btn btn-outline-primary" href="{{ path('app_user_index') }}">< Retour Ã  la liste</a>
        <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
    </div>
</div>
{{ form_end(form) }}
