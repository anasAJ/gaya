{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ client.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Added_date</th>
                <td>{{ client.addedDate }}</td>
            </tr>
            <tr>
                <th>Added_time</th>
                <td>{{ client.addedTime }}</td>
            </tr>
        </tbody>
    </table>

    <div class="card mt-3">
        <div class="card-body">
