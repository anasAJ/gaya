{{ form_start(form, {'method':'POST', 'action': path('app_client_new')}) }}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <!-- Message flash -->
        <div id="flashMessage" class="alert alert-success d-none"></div>
        <h4 class="card-title">Infos. prospect</h4>
        
        <p class="card-description"></p>
          <div class="row">
            <div class="col">
              {% if not is_granted('ROLE_USER') %}
                {{ form_label(form.user) }}
                {{ form_widget(form.user) }}
              {% else %}
                <label>Utilisateur</label><br>
                <b>{{ app.user.firstName }} {{ app.user.lastName }}</b>
              {% endif %}
            </div>
            <div class="col">
              {{ form_label(form.phase) }}
              {{ form_widget(form.phase) }}
            </div>
            <div class="col">
              {{ form_label(form.status) }}
              {{ form_widget(form.status) }}
            </div>
          </div>
          <hr>
          <div class="form-group">
            {{ form_label(form.first_name) }}
            {{ form_widget(form.first_name) }}
          </div>
          <div class="form-group">
            {{ form_label(form.last_name) }}
            {{ form_widget(form.last_name) }}
          </div>
          <div class="row">
            <div class="col-md-5">
               <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-group">
                {{ form_label(form.indicative) }}
                {{ form_widget(form.indicative) }}
              </div>
            </div>
            <div class="col-md-5">
              <div class="form-group">
                {{ form_label(form.phone) }}
                {{ form_widget(form.phone) }}
              </div>
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.comment) }}
            {{ form_widget(form.comment) }}
          </div>
          
          <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
      </div>
    </div>
     
</div>



{{ form_end(form, { 'render_rest': false }) }}

<div class="card mt-3">
    <div class="card-body">
        <a class="btn btn-outline-primary" href="{{ path('app_client_index') }}">< Retour Ã  la liste</a>
    </div>
</div>


