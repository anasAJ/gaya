{{ form_start(form) }}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <!-- Message flash -->
        <div id="flashMessage" class="alert alert-success d-none"></div>
        <h4 class="card-title">Infos. Prédictive</h4>
        
        <p class="card-description"></p>
          <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
          </div>
          <div class="form-group">
            {{ form_label(form.source) }}
            {{ form_widget(form.source) }}
          </div>
          <div class="form-group">
            {{ form_label(form.status) }}
            {{ form_widget(form.status) }}
          </div>
          <div class="row">
            <div class="col">
                {{ form_label(form.team) }}
                {{ form_widget(form.team) }}
            </div>
            <div class="col">
                {{ form_label(form.user) }}
                {{ form_widget(form.user) }}
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    {{ form_label(form.csv_file) }}
                    {{ form_widget(form.csv_file) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    {{ form_label(form.repeated) }}
                    {{ form_widget(form.repeated) }}
                </div>
            </div>
          </div>
          
          
      </div>
    </div>
     
</div>



